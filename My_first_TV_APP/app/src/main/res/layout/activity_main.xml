<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignMargins"
    android:columnCount="2"
    android:columnOrderPreserved="false"
    android:foregroundTint="#D7870B"
    android:background="@drawable/wallpaper3"
    android:rowCount="3"
    android:rowOrderPreserved="false">

    <Button
        android:id="@+id/button2"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_margin="10dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#E1CB0A"
        android:focusableInTouchMode="true"
        android:shadowColor="#FFFFFF"
        android:text="@string/al_jazeera_ch"
        android:textSize="43sp" />

    <Button
        android:id="@+id/button4"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_margin="10dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#02D2DD"
        android:focusableInTouchMode="true"
        android:text="@string/trt_world_ch"
        android:textSize="43sp" />

    <Button
        android:id="@+id/button5"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_margin="10dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#0237BB"
        android:focusableInTouchMode="true"
        android:text="@string/cgtn_ch"
        android:textSize="43sp" />

    <Button
        android:id="@+id/button6"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_margin="10dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#FE3333"
        android:focusableInTouchMode="true"
        android:text="@string/sky_news_ch"
        android:textSize="43sp" />

    <Button
        android:id="@+id/button3"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_margin="10dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#3BC1FE"
        android:focusableInTouchMode="true"
        android:text="@string/dw_news_ch"
        android:textSize="43sp" />

    <Button
        android:id="@+id/button7"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_margin="10dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#FF9800"
        android:focusableInTouchMode="true"
        android:text="@string/geo_news_ch"
        android:textSize="43sp" />

</GridLayout>
